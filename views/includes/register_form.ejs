<div class="container">
    <div class="row">
        <div class="col-xs-3 sides"></div>

        <div class="col-xs-6">
            <div class="page-header header">Register</div>
            <form class="form inline-form" action="/register" method="post">

                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username"/>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password"/>
                </div>
                <button type="submit" id="button" class="btn btn-default">Register</button>

                <% if(typeof error != "undefined"){%>
                <p class="text-danger"><%= error %></p>
                <%}%>

            </form>
        </div>
        <div class="col-xs-3 sides">

        </div>

    </div>
</div>
