<div class="container" data-ng-app="chatApp" data-ng-controller="chatController">

    <h1 class="h1">Tanks!</h1>

    <div class="row row1">
        <div class="col-xs-3 row1col1">
            <div id="users">
                <ul class="list-unstyled" id="currentUsers">
                    <li class="list-group-item">Test User1</li>
                    <li class="list-group-item">Test User2</li>
                    <li class="list-group-item">Test User3</li>
                    <li class="list-group-item">Test User4</li>
                    <li class="list-group-item">Test User5</li>
                </ul>
            </div>
        </div>
        <div class="col-xs-6 row1col2">
            <ul class="chatText">
                <li class="message" data-ng-repeat="message in messages">
                    <div class="messageSender">{{message.user}}: {{message.message}}</div>
                </li>
            </ul>
        </div>
        <div class="col-xs-3 row1col3">
            <div id="games">
                <ul class="list-unstyled list-group" id="currentGames">
                    <li class="list-group-item">Test Game1</li>
                    <li class="list-group-item">Test Game2</li>
                    <li class="list-group-item">Test Game3</li>
                    <li class="list-group-item">Test Game4</li>
                    <li class="list-group-item">Test Game5</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row row2">
        <div class="col-xs-2 row2col1">

            <img src="../images/testTank.gif" class="img-responsive"/>

        </div>
        <div class="col-xs-10 row2col2">
            <div class="row">
                <div class="col-xs-12 messageForm">
            <form class="form inline-form">
                <div class="form-group">
                    <label>Message: <input type="text" class="control-group" name="message"/></label>
                    <button type="submit" name="send" class="btn btn-default">Send</button>
                </div>
            </form>
                </div>
        </div>
            <div class="row">
                <div class="col-xs-12 stats">
                    <h2 class="h2">Username: <strong id="username"><%= profile.username%></strong></h2>
                    <h2 class="h2">Kills: <strong id="kills"><%=profile.kills%></strong></h2>
                    <a href="/private/logout" class="btn btn-info" role="button">Logout</a>
                </div>
            </div>
        </div>
    </div>

</div>